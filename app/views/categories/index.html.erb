<div class="d-flex flex-row justify-content-between align-items-center">
  <h1>Categories</h1>
  <% if logged_in? && current_user.admin? %>
    <%= link_to 'New Category', new_category_path, class: "btn btn-dark btn-lg text-decoration-none text-white" %>
  <% end %>
</div>

<div class="container-fluid p-0 mt-3">
  <%= will_paginate @categories, list_classes: %w[pagination justify-content-center], renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  <div class="row row-cols-1 row-cols-sm-1 row-cols-md-3 g-3">
    <% @categories.each do |category| %>
      <div class="col">
        <div class="card">
          <div class="card-body d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><%= link_to category.name, category_path(category), class: 'text-decoration-none text-dark' %>
            </h4>
            <h5 class="mb-0">
              <span class="badge bg-secondary"><%= pluralize(category.articles.count, 'article') %></span>
            </h5>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="my-3">
    <%= will_paginate @articles, list_classes: %w[pagination justify-content-center], renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  </div>
</div>
