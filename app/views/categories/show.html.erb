<div class="row justify-content-center mb-3">
  <div class="col-md-9">
    <div class="card">
      <div class="card-body d-flex align-items-center">
        <h1 class="mb-0"><%= @category.name %></h1>
        <% if current_user.admin? %>
          <div class="ms-3">
            <%= link_to 'Edit', edit_category_path(@category), class: "btn btn-outline-secondary card-link" %>
            <%= link_to 'Delete', category_path(@category), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-outline-danger card-link" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-md-9">
    <div class="card border-dark mb-4">
      <div class="card-header bg-dark">
        <h3 class="text-white mb-0">Articles</h3>
      </div>
      <div class="card-body">
        <div class="row g-3">
          <% if @articles.any? %>
            <%= will_paginate @articles, list_classes: %w[pagination], renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
            <% @articles.each do |article| %>
              <div class="col-12">
                <%= render 'articles/article', article: article %>
              </div>
            <% end %>
          <% else %>
            <p class="text-center text-muted">No articles found</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>