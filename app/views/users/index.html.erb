<div class="row justify-content-center mb-3">
  <div class="col">
    <h1>Bloggers</h1>
  </div>
</div>
<div class="row">
  <%= will_paginate @users, list_classes: %w[pagination justify-content-center], renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  <% @users.each do |user| %>
    <div class="col-xl-6">
      <%= render 'user', user: user %>
    </div>
  <% end %>
  <%= will_paginate @users, list_classes: %w[pagination justify-content-center], renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
</div>