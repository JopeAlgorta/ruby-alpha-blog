<div class="row justify-content-center">
  <div class="col-md-9">
    <%= render 'user', user: @user %>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-md-9">
    <div class="card border-dark mb-4">
      <div class="card-header bg-dark">
        <h3 class="text-white mb-0">Articles</h3>
      </div>
      <div class="card-body">
        <div class="row g-3">
          <% if @articles.any? %>
            <%= will_paginate @articles, list_classes: %w[pagination], renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
            <% @articles.each do |article| %>
              <div class="col-12">
                <%= render 'articles/article', article: article %>
              </div>
            <% end %>
          <% else %>
            <p class="text-center text-muted">No articles found</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
